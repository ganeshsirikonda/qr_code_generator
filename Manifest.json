{
    "manifest_version": 3,
    "name": "QR Code Generator",
    "version": "1.0",
    "description": "Generate QR codes for current website and scan it on your phone to access it.",
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    }
  }
  